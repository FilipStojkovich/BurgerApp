@model UserViewModel


<h3>Edit @Model.FirstName @Model.LastName</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="custom-control-label"></label>
                <input type="text" asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="custom-control-label"></label>
                <input type="text" asp-for="LastName" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="custom-control-label"></label>
                <input type="text" asp-for="Address" class="form-control" />
            </div>
            <button type="submit" class="btn btn-outline-success">Update</button>
        </form>
    </div>
</div>