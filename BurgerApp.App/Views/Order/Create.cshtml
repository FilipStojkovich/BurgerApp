@model OrderViewModel

<h3>Create new order</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name" class="custom-control-label"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IsDelivered" class="custom-control-label"></label>
                <input type="checkbox" asp-for="IsDelivered" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="custom-control-label"></label>
                <input type="text" asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Location" class="custom-control-label"></label>
                <input type="text" asp-for="Location" class="form-control" />
            </div>
            <button type="submit" class="btn btn-outline-success">Create</button>
        </form>
    </div>
</div>